<%= simple_form_for @person do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone %>
  <%= f.simple_fields_for :address do |a| %>
    <%= a.input :street_address %>
    <%= a.input :city %>
    <%= a.input :state %>
    <%= a.input :zip %>
  <%= f.button :submit %>
  <% end %>
<% end %>
