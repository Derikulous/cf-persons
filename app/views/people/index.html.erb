<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.phone %></td>
      <td>
        <% if person.address.nil? %>
        No Address
        <% else %>
        <%= person.address.state %>
        <% end %>
      </td>
      <td>
        <%= link_to "Show", person %>
        <%= link_to "Edit", edit_person_path(person) %>
        <%= link_to "Delete", person, method: :delete, confirm:
        'Are you sure you want to delete this user?' %>
      </td>
    </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Add Person", new_person_path %>
